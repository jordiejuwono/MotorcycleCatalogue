<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailActivity">


    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/dots_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/view_pager" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/dots_indicator">

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@id/iv_image"
                    tools:text="Scooter" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_color"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:text="CB1100RS" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    tools:text="@tools:sample/lorem" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Spesifications"
                    android:textColor="@color/primary_color"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:text="Oil Tank\nCapacity"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_oil_capacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.8 L"
                            android:textColor="@color/primary_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:text="Displacement"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_displacement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="125 cc"
                            android:textColor="@color/primary_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:text="Maximum\nPower"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_max_power"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11.9 hp"
                            android:textColor="@color/primary_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom_content"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="8dp"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv_content">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/orange_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Rp 10.000.000,00" />


        <Button
            android:id="@+id/btn_buy"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="3"
            android:text="Buy Now" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
